{
    "editor.formatOnSave": true,
    "go.testFlags": [
        "-v"
    ],
    "emeraldwalk.runonsave": {
        "autoClearConsole": true,
        "commands": [
            {
                "match": "\\.go$",
                "isAsync": true,
                "cmd": "make -j$(nproc) go-format"
            }
        ]
    }
}